{
  "manifest_version": 3,
  "name": "PR Guardian",
  "version": "1.0.0",
  "description": "Prevents merging GitHub pull requests with multiple commits",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/pull/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
